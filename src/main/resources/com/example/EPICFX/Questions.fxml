<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="634.0" prefWidth="868.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.EPICFX.QuestionsMain">
    <children>
        <ImageView fitHeight="634.0" fitWidth="868.0" pickOnBounds="true">
            <image>
                <Image url="@quiz.jpg"/>
            </image>
        </ImageView>
        <Button fx:id="Answer1" layoutX="94.0" layoutY="195.0" mnemonicParsing="false" onAction="#handleAnswer1Action"
                prefHeight="65.0" prefWidth="649.0"/>
        <Button fx:id="Answer2" layoutX="93.0" layoutY="284.0" mnemonicParsing="false" onAction="#handleAnswer2Action"
                prefHeight="65.0" prefWidth="650.0"/>
        <Button fx:id="Answer3" layoutX="93.0" layoutY="376.0" mnemonicParsing="false" onAction="#handleAnswer3Action"
                prefHeight="65.0" prefWidth="650.0"/>
        <Label fx:id="QuestionText" contentDisplay="TOP" layoutX="93.0" layoutY="19.0" prefHeight="171.0"
               prefWidth="538.0" text="Click Play Button To Start" textFill="WHITE" wrapText="true">
            <font>
                <Font name="Britannic Bold" size="32.0"/>
            </font>
        </Label>
        <Button fx:id="Playbutton" layoutX="632.0" layoutY="19.0" mnemonicParsing="false" onAction="#playGame"
                prefHeight="66.0" prefWidth="222.0" text="Play"/>
        <Button fx:id="Answer4" layoutX="93.0" layoutY="468.0" mnemonicParsing="false" onAction="#handleAnswer4Action"
                prefHeight="76.0" prefWidth="650.0"/>
        <Label fx:id="PageMarker" layoutX="625.0" layoutY="569.0" prefHeight="50.0" prefWidth="210.0" textFill="WHITE">
            <font>
                <Font size="33.0"/>
            </font>
        </Label>
    </children>
</AnchorPane>
